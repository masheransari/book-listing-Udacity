<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/listdetails"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_title"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"
            tools:text="Harry potter the Prisoner of Something"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_publisher"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:scrollHorizontally="false"
            android:textColor="@color/textColorSecondaryText"
            android:textSize="12sp"
            android:text="Publisher: Pottermore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_author"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            tools:text="Author: J. K. Rowling"
            android:scrollHorizontally="false"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:id="@+id/link"
            android:textSize="10sp"
            android:text="Hello World,Hello World,Hello World,Hello WorldHello WorldHello World,Hello World,Hello WorldHello World,Hello WorldHello WorldHello WorldHello WorldHello WorldHello World,Hello World,Hello World"
            android:textColor="@android:color/holo_red_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/book_rating"
                android:layout_gravity="start"
                android:numStars="5"
                android:maxWidth="48dp"
                android:minWidth="48dp"
                style="@style/RatingBar"
                />
            <TextView
                android:id="@+id/book_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:scrollHorizontally="false"
                android:textSize="12sp"
                tools:text="Juvenile Thriller"
                android:textColor="@color/textColorTertiaryText"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>